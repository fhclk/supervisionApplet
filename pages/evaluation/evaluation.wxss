/* pages/evaluation/evaluation.wxss */

.info-view {
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
}

.info-view > view {
  margin: 10rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.info-view > .status-view {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.info-view > .status-view text {
  color: #777;
  font-size: 12pt;
  padding: 4rpx 20rpx;
  margin: 6rpx 0;
  border-left: solid #ff8533 2px;
}

.title-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}


.eva-des-view > view:first-child {
  background-color: #f2f2f2;
  padding: 30rpx 30rpx 12rpx 30rpx;
  font-size: 13pt;
  color: #444;
}

.eva-des-view > view:first-child {
  padding: 20rpx 30rpx;
  font-size: 13pt;
  color: #666;
}

.eva-des-view .content {
  padding: 30rpx;
  font-size: 12pt;
  color: #777;
  white-space: pre-wrap;
}

.bottom-view {
  position: absolute;
  bottom: 0;
  width: 100%;
}

.bottom-view button {
  color: white;
  background-color: #ff8533
}