/* pages/homePage/homePage.wxss */

.introduceinfo {
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
}

.select-btn-view {
  margin: 50rpx 30rpx 20rpx 10rpx;
  border: solid #dddddd 1px;
  border-radius: 40rpx;
  background-color: #f6f9fc;
  height: 190rpx;
  display: flex;
  align-items: center;
}

.select-btn-view > text {
  flex: 1;
  text-align: center;
  font-size: 15pt;
}
.select-btn-view>view {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.select-btn-view view:first-child {
  justify-content: flex-end;
}

.item-icon {
  width: 80rpx;
  height: 80rpx;
}

.rightArrow {
  width: 50rpx;
  height: 50rpx;
}

.badge-view {
  background-color: red;
  color: white;
  padding: 0 14rpx;
  /* width: 40rpx; */
  line-height: 40rpx;
  border-radius: 50%;
  position: absolute;
  top: -6rpx;
  right: -18rpx;
  text-align: center;
}

.badge-view > text {
  font-size: 10pt;
}
